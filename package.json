{
    "name": "react-typescript-package-template",
    "version": "1.0.0",
    "description": "Template to write and test a react & typescript package",
    "keywords": [
        "react",
        "typescript",
        "package"
    ],
    "author": "Julio Cordeiro",
    "license": "MIT",
    "main": "index.js",
    "module": "index.js",
    "types": "index.d.ts",
    "sideEffects": false,
    "files": [
        "src",
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/juliomrc/react-typescript-package-template.git"
    },
    "bugs": {
        "url": "https://github.com/juliomrc/react-typescript-package-template/issues"
    },
    "homepage": "https://github.com/juliomrc/react-typescript-package-template#readme",
    "scripts": {
        "start-dev": "webpack serve --hot --env dev",
        "clean-dist": "rimraf examples-dist && rimraf dist",
        "test": "jest",
        "type-check": "tsc --noEmit",
        "build-dev": "npm-run-all -p clean-dist test type-check & webpack --env dev",
        "build-prd": "npm-run-all -p clean-dist test type-check & webpack",
        "build-package": "npm run clean-dist test && tsc",
        "prepare": "husky install"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@babel/preset-env": "^7.14.4",
        "@babel/preset-react": "^7.13.13",
        "@babel/preset-typescript": "^7.13.0",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
        "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
        "@testing-library/jest-dom": "^5.13.0",
        "@testing-library/react": "^11.2.7",
        "@testing-library/react-hooks": "^7.0.0",
        "@types/jest": "^26.0.23",
        "@types/react": "^17.0.9",
        "@types/react-dom": "^17.0.6",
        "@typescript-eslint/eslint-plugin": "^4.26.1",
        "@typescript-eslint/parser": "^4.26.1",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.2.6",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-webpack-plugin": "^2.5.4",
        "html-webpack-plugin": "^5.3.1",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "lint-staged": "^11.0.0",
        "mini-css-extract-plugin": "^1.6.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-refresh": "^0.10.0",
        "rimraf": "^3.0.2",
        "sass": "^1.34.1",
        "sass-loader": "^12.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-webpack-plugin": "^2.1.1",
        "typescript": "^4.3.2",
        "webpack": "^5.38.1",
        "webpack-bundle-analyzer": "^4.4.2",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    },
    "peerDependencies": {
        "react": ">=16.8.0"
    },
    "dependencies": {}
}
